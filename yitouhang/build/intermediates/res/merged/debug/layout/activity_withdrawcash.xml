<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical" >

     <!-- 标题 -->
    <RelativeLayout
        android:id="@+id/rel1" 
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/title_grey"
        >
        <!-- 返回箭头 -->
        <FrameLayout 
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/back_layout"
            >
            <ImageView 
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/img_back"
                android:layout_gravity="center"
                />
        </FrameLayout>
         <TextView 
             android:id="@+id/withdrawcash"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
           	 android:layout_centerInParent="true"
             android:text="提现"
             android:textColor="@color/white"
             android:gravity="center"
             android:textSize="17dp"
             />
         <TextView 
             android:id="@+id/notice"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="说明"
             android:textColor="@color/white"
             android:gravity="center"
             android:textSize="11dp"
             android:layout_alignParentRight="true"
             android:paddingRight="10dp"
             android:paddingLeft="10dp"
             />
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv1" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户余额"
                />
            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32,856"
                android:textSize="24sp"
                android:layout_below="@id/tv1"
                />
            <TextView
                android:layout_below="@id/tv1"
                android:layout_toRightOf="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/money"
                android:text="元"/>
        </RelativeLayout>
        

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_grey"
        />

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:id="@+id/tv3" 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="本次免费提现额度"
            android:gravity="center_vertical"
            android:textColor="#A6A6A6"
            />
        <TextView
            android:id="@+id/tv_edu"
            android:layout_marginLeft="10dp" 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3,228元"
            android:gravity="center_vertical"
            android:textColor="#A6A6A6"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <!-- 提现金额 -->
    <View
       android:layout_width="match_parent"
       android:layout_height="1px"
       android:background="@color/divider_grey"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="提现金额"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="numberDecimal"
            android:hint="输入提现金额"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            />
        <TextView 
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:text="元"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <View 
       android:layout_width="match_parent"
       android:layout_height="1px"
       android:background="@color/divider_grey"  
       />
    
    <View 
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="1px"
       android:background="@color/divider_grey"  
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="提现至"
                android:textColor="#A6A6A6"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_bank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="招商银行（9970）"
                android:textColor="#A6A6A6"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView 
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="手续费" 
               android:textColor="#A6A6A6"
               android:gravity="center_vertical"
               />
            <TextView
                android:id="@+id/tv_factor"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="0元"
               android:textColor="#A6A6A6"
               android:gravity="center_vertical"
               android:layout_alignParentRight="true"
               />
        </RelativeLayout>
        
          <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView 
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="实际到账" 
               android:textColor="#A6A6A6"
               android:gravity="center_vertical"
               />
            <TextView
                android:id="@+id/tv_daozhang"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="0元"
               android:gravity="center_vertical"
               android:layout_alignParentRight="true"
               />
        </RelativeLayout>
    </LinearLayout>
    <View 
       android:layout_width="match_parent"
       android:layout_height="1px"
       android:background="@color/divider_grey"  
       />
    

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_height="14dp">
        <ImageView
            android:id="@+id/img_toggle"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/img_read"/>
        <TextView
            android:id="@+id/agret"
            android:layout_toRightOf="@+id/toggle_img"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textSize="12dp"
            android:text="阅读并同意"
            android:layout_gravity="center_vertical"
            android:textColor="@color/divider_grey"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_toRightOf="@+id/agret"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textSize="12dp"
            android:layout_gravity="center_vertical"
            android:text="《壹投行委托扣款协议》"
            android:textColor="@color/light_green"
            />
    </LinearLayout>

    <!-- 按钮 -->
    <RelativeLayout
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        >
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/nextbtn" 
            android:layout_width="288dp"
            android:layout_height="50dp"
            android:text="下一步"
            android:textColor="@color/white"
            android:background="@drawable/button_red_corner_border"
            android:gravity="center"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/nextbtn" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="账户资金安全由平安保险100%承保"
            android:textSize="12sp"
            android:textColor="#A6A6A6"
            android:gravity="center"
            />
        
    </RelativeLayout>

</LinearLayout>
