<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <com.laxiong.View.CommonActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        custom:bgcolor="@color/title_grey"
        custom:textcolor="@color/white"
        custom:texts="共识理财"
        custom:textsize="6sp" />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:id="@+id/ll_data"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@id/actionbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--交易编号-->
        <RelativeLayout
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/grey_bg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易编号"/>
            <TextView
                android:id="@+id/tv_tnum"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6666"/>
        </RelativeLayout>
        <!--真实姓名-->
        <RelativeLayout
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/grey_bg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="真实姓名"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"/>
        </RelativeLayout>
        <!--平台账号-->
        <RelativeLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/grey_bg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平台账号"/>
            <TextView
                android:id="@+id/tv_pltnum"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6666"/>
        </RelativeLayout>
        <!--身份证号-->
        <RelativeLayout
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/grey_bg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号"/>
            <TextView
                android:id="@+id/tv_idc"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6666"/>
        </RelativeLayout>
        <!--交易日期-->
        <RelativeLayout
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/grey_bg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易日期"/>
            <TextView
                android:id="@+id/tv_ttime"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6666"/>
        </RelativeLayout>
        <!--交易类型 -->
        <RelativeLayout
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/grey_bg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易类型"/>
            <TextView
                android:id="@+id/tv_ttype"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6666"/>
        </RelativeLayout>
        <!--到期时间-->
        <RelativeLayout
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/grey_bg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到期时间"/>
            <TextView
                android:id="@+id/tv_endtime"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6666"/>
        </RelativeLayout>
        <!--交易金额-->
        <RelativeLayout
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/grey_bg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易金额"/>
            <TextView
                android:id="@+id/tv_tmoney"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6666"/>
        </RelativeLayout>
        <!--手续费-->
        <RelativeLayout
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/grey_bg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手续费"/>
            <TextView
                android:id="@+id/tv_fee"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6666"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_look"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_data"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="查看详情"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/shape_redbtn_border"/>
</RelativeLayout>
