<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/barnner"
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <com.laxiong.View.ChildViewPager
                    android:id="@+id/childviewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/layout_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white">

                <View
                    android:id="@+id/toutiao_line"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#FFFE9D83" />

                <TextView
                    android:id="@+id/toutiao"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/toutiao_line"
                    android:gravity="center"
                    android:textColor="#A6A6A6" />

                <TextView
                    android:id="@+id/cental"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/toutiao"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:text="这是一条十分重要的财经头条的消息。"
                    android:textColor="#D8D8D8" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_grey" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/divider_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/new_biao"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/imgs1"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#FF7CC9E5" />

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_marginLeft="21dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/imgs1"
                        android:gravity="center"
                        android:text="新手专享"

                        />

                    <TextView
                        android:id="@+id/new_biao_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_below="@id/tv1"
                        android:layout_marginLeft="21dp"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@+id/imgs1"
                        android:text="超高收益 私人定制"
                        android:textColor="#FF999999"
                        android:textSize="12sp"

                        />

                    <ImageView
                        android:id="@+id/newb_img"
                        android:layout_width="32dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/tv1" />

                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_width="6dp"
                        android:layout_height="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="22dp"
                        android:src="@drawable/img_refresh_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_grey" />

                <RelativeLayout
                    android:id="@+id/time_xitong"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/imgs2"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#FF41A8E3" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_marginLeft="21dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/imgs2"
                        android:gravity="center"
                        android:text="时息通" />

                    <TextView
                        android:id="@+id/sxt_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_below="@id/tv2"
                        android:layout_marginLeft="21dp"
                        android:layout_toRightOf="@+id/imgs2"
                        android:text="一元起投 随存随取"
                        android:textColor="#FF999999"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/arrow2"
                        android:layout_width="6dp"
                        android:layout_height="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="22dp"
                        android:src="@drawable/img_refresh_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_grey" />

                <RelativeLayout
                    android:id="@+id/gu_xibao"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/imgs3"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#FF3B8CDF" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_marginLeft="21dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/imgs3"
                        android:gravity="center"
                        android:text="固息宝，碳银宝三期" />

                    <TextView
                        android:id="@+id/gxb_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_below="@id/tv3"
                        android:layout_marginLeft="21dp"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@+id/imgs3"
                        android:text="稳固投资 超高收益"
                        android:textColor="#FF999999"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/gxb_img"
                        android:layout_width="32dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/tv3" />

                    <ImageView
                        android:id="@+id/arrow3"
                        android:layout_width="6dp"
                        android:layout_height="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="22dp"
                        android:src="@drawable/img_refresh_arrow"


                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:gravity="center"
                android:background="@color/light_grey"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/solid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/divider_grey" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/divider_grey" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
