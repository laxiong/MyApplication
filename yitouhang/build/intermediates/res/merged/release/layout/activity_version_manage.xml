<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/light_grey"
    android:layout_height="match_parent">

    <include layout="@layout/white_title_head_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/version_icon"
            android:layout_centerInParent="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/layer_version"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/version_icon"
            android:gravity="center_horizontal"
            android:text="共时理财"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv"
            android:gravity="center_horizontal"
            android:text="v1.0"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:background="@color/white"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_grey" />
        <RelativeLayout
            android:id="@+id/rl_update"
            android:layout_width="match_parent"
            android:paddingLeft="23dp"
            android:paddingRight="22dp"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tv_judge"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="去评分"/>

            <ImageView
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/img_refresh_arrow"/>
        </RelativeLayout>

        <View
            android:layout_marginLeft="23dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_bg"/>

        <RelativeLayout
            android:id="@+id/rl_wel"
            android:layout_width="match_parent"
            android:paddingLeft="23dp"
            android:paddingRight="22dp"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="欢迎页"/>

            <ImageView
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/img_refresh_arrow"/>
        </RelativeLayout>

        <View
            android:layout_marginLeft="23dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_bg"/>

        <RelativeLayout
            android:id="@+id/rl_feedback"
            android:layout_width="match_parent"
            android:paddingLeft="23dp"
            android:paddingRight="22dp"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="意见反馈"/>

            <ImageView
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/img_refresh_arrow"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_grey" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#379BEB"
            android:textSize="12sp"
            android:text="壹投行服务协议"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="10sp"
            android:textColor="#A6A6A6"
            android:text="Copyright c 2014-20161TBank. All Rights Reserved."/>



    </LinearLayout>



</LinearLayout>