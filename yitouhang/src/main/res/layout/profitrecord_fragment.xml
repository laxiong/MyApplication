<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#F1F2F3"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/shixitong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/buy_text"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="时息通"/>
            <TextView
                android:layout_below="@id/buy_text"
                android:id="@+id/shixitong_line"
                android:layout_width="45dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/guxibao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/ransom_text"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="固息宝"/>
            <TextView
                android:id="@+id/guxibao_line"
                android:layout_below="@id/ransom_text"
                android:layout_width="45dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/person"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="人脉"/>
            <TextView
                android:id="@+id/person_line"
                android:layout_below="@id/text"
                android:layout_width="45dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/profit_content"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>



</LinearLayout>