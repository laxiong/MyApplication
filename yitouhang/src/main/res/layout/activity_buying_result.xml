<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical" >
    
    <include layout="@layout/white_title_head_layout"/>
    
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <ImageView
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@drawable/img_chengg"
            />
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="购买成功"
            android:gravity="center"
            />
    </LinearLayout>
    <View 
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="@color/divider_grey"  
      />
    
    <View 
      android:layout_marginTop="20dp"
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="@color/divider_grey"  
      />
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="70dp"
         android:orientation="vertical"
         android:background="@color/white"
         >
         <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:paddingLeft="20dp"
             android:paddingRight="20dp"
             >
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="产品名称"
                 android:textColor="#A6A6A6"
                 android:textSize="14sp"
                 android:gravity="center_vertical"
                 />
             <TextView
                 android:id="@+id/product_name"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="碳银宝3期"
                 android:textColor="#A6A6A6"
                 android:textSize="14sp"
                 android:gravity="center_vertical"
                 android:layout_alignParentRight="true"
                 />
         </RelativeLayout>
         
         <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:paddingLeft="20dp"
             android:paddingRight="20dp"
             >
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="购买金额"
                 android:textColor="#A6A6A6"
                 android:textSize="14sp"
                 android:gravity="center_vertical"
                 />
             <TextView
                 android:layout_toLeftOf="@+id/yuan"
                 android:id="@+id/pay_money"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="49,950"
                 android:textColor="@color/money_org"
                 android:textSize="14sp"
                 android:gravity="center_vertical"
                 />
             <TextView
                 android:id="@+id/yuan"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:textSize="14sp"
                 android:textColor="#A6A6A6"
                 android:gravity="center_vertical"
                 android:layout_alignParentRight="true"
                 android:text="元"/>
         </RelativeLayout>
     </LinearLayout>
     <View 
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="@color/divider_grey"  
      />
     
     
     <View 
      android:layout_marginTop="20dp"
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="@color/divider_grey"  
      />

    <LinearLayout
        android:layout_height="94dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <LinearLayout
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <View
                android:layout_marginTop="20dp"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/img_result_piont_xz"
                />
            <RelativeLayout
                android:layout_width="6dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/light_grey"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <View
                android:layout_marginBottom="20dp"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/img_result_piont_mr"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="购买确认"
                    android:textSize="12sp"
                    android:textColor="#A6A6A6"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tv_buy_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2016-03-20"
                    android:textSize="12sp"
                    android:textColor="#A6A6A6"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="一次性还本付息"
                    android:textSize="12sp"
                    android:textColor="#A6A6A6"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tv_last_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2016-04-20"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
         
     <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="@color/divider_grey"  
      />
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:orientation="vertical"
         >
	     <TextView
             android:id="@+id/complete_Btn"
	         android:layout_centerInParent="true"
	         android:layout_width="280dp"
	         android:layout_height="40dp"
	         android:text="完成"
	         android:textColor="@color/white"
	         android:background="@drawable/button_red_corner_border"
	         android:gravity="center"
	         />
     </RelativeLayout>

</LinearLayout>
