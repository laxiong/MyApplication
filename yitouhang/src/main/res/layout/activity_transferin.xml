<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical" >
    <!-- 标题 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_grey"
        >
        <FrameLayout 
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/in_backlayout"
            >
            <ImageView 
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/img_back"
                android:layout_gravity="center"
                />
        </FrameLayout>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转入"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/bankcan" 
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" "
            android:gravity="center_vertical"
             android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingRight="10dp"
            />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/transferin_product"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="转入到时息通"
        android:textColor="#A6A6A6"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余可购金额 "
            android:textSize="12sp"
            android:textColor="#A6A6A6"
            />
        <TextView
            android:id="@+id/project_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00.00"
            android:textSize="12sp"
            android:textColor="#EE4E42"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元 "
            android:textSize="12sp"
            android:textColor="#A6A6A6"
            />
    </LinearLayout>

    <View 
       android:layout_width="match_parent"
       android:layout_height="1px"
       android:background="@color/divider_grey"  
       />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="金额"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/input_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入转入的金额"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:background="@null"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:inputType="numberSigned"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="元"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <View 
       android:layout_width="match_parent"
       android:layout_height="1px"
       android:background="@color/divider_grey"  
       />
    
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <LinearLayout 
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预期收益到账时间"
                    android:textColor="#A6A6A6"
                    />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="2015/04/05"
                    android:textColor="#EE7737"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    
    <View 
       android:layout_width="match_parent"
       android:layout_height="1px"
       android:background="@color/divider_grey"  
       />
    <LinearLayout
        android:id="@+id/selectpaymethod"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="付款"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/showbankname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="银行卡号"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            />
        <ImageView 
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:src="@drawable/img_refresh_arrow"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <View 
       android:layout_width="match_parent"
       android:layout_height="1px"
       android:background="@color/divider_grey"  
       />
    
    
    
    <LinearLayout
        android:id="@+id/mMost_limit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="该卡本次转入金额上限为"
            android:textColor="#A6A6A6"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/transferin_limit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="00.00"
            android:textColor="#EE7737"
            android:gravity="center_vertical"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="元"
            android:textColor="#A6A6A6"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    
    
    <LinearLayout
        android:layout_marginTop="15dp" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <ImageView
            android:id="@+id/img_toggle"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/img_read"
            />
        <TextView 
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阅读并同意"
            android:textColor="#A6A6A6"
            android:gravity="center_vertical"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《共时理财服务协议》"
            android:textColor="@color/protocolColor"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        >
        <TextView 
            android:id="@+id/transferinnow"
            android:layout_centerInParent="true"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="立即转入"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/button_grey_corner_border"
            />
    </RelativeLayout>
</LinearLayout>
